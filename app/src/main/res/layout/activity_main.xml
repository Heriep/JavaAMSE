<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etoilefond" />

    <ImageView
        android:id="@+id/Pad_exterior"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/Background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pad_exterior" />

    <ImageView
        android:id="@+id/Pad_center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/Pad_exterior"
        app:layout_constraintEnd_toEndOf="@+id/Pad_exterior"
        app:layout_constraintStart_toStartOf="@+id/Pad_exterior"
        app:layout_constraintTop_toTopOf="@+id/Pad_exterior"
        app:srcCompat="@drawable/pad_center" />

    <ImageView
        android:id="@+id/Tie"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toTopOf="@+id/Pad_exterior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/tie" />

</androidx.constraintlayout.widget.ConstraintLayout>